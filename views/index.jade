div(ng-view)

script(type='text/ng-template' id='signup').
  <h1>Sign Up</h1>
  <form>
    <div class="form-group">
      <input id='identification' placeholder='Enter Email' class='form-control' ng-model='userInfo.email' />
    </div>
    <div class="form-group">
      <input id='password' placeholder='Enter Password' class='form-control' type='password' ng-model='userInfo.password' />
    </div>
    <button type="submit" class="btn btn-default" ng-click='signupUser();'>Sign Up</button>
  </form>

script(type='text/ng-template' id='habits').
  <div class="nav-bar">
    <h4>Habits</h4>
    <a href="#" class="logout" ng-click="signoutUser();">Logout</a>
  </div>
  <ul>
    <li ng-repeat="habit in habits">
      <div class='title'> <a href="#/habit/{{habit.id}}"><span class='value'>{{value(habit.id)}}</span>{{habit.title}}</a></div>
      <div class='button-container'>
        <button class='plus' ng-click="checkin(habit.id, 1);"> + </button>
        <button class='minus' ng-click="checkin(habit.id, -1);"> - </button>
      </div>
    </li>
  </ul>
  <a href="#/habits/new">New Habit</a>

script(type='text/ng-template', id="habits/new").
  <div class="nav-bar">
    <h4> New Habit </h4>
    <a href="#" class="logout" ng-click="signoutUser();">Logout</a>
  </div>
  <input type="text" cols="30" ng-model="title" />
  <button ng-click="createHabit(title);">Save</button>

script(type='text/ng-template' id='habit').
  <div class="nav-bar">
    <h4>{{habit.title}}</h4>
    <a href="#" class="logout" ng-click="signoutUser();">Logout</a>
  </div>
  <button class='delete' ng-click="deleteHabit(habit.id);">Delete {{habit.title}}</button>

script(type='text/ng-template' id='login').
  <h1>Login</h1>
  <form>
    <div class="form-group">
      <input id='identification' placeholder='Enter Login' class='form-control' ng-model='loginCredentials.email' />
    </div>
    <div class="form-group">
      <input id='password' placeholder='Enter Password' class='form-control' type='password' ng-model='loginCredentials.password' />
    </div>
    <button type="submit" class="btn btn-default" ng-click='authenticateUser();'>Login</button>
  </form>
  <a href='#/signup'>Sign Up</a>
